[Unit]
Description=rqlite service
Wants=network-online.target
After=network-online.target

[Service]
User=cdn
Group=cdn
Type=simple
WorkingDirectory=/home/cdn/rqlite
ExecStartPre=/bin/sh -c 'until ping -c1 rqlite; do sleep 1; done;'
ExecStart=/home/cdn/rqlite/rqlited -node-id 1 -http-addr 10.0.0.x:4003 -raft-addr 10.0.0.x:4004 -join http://10.0.0.1:4003 datadir
#Remove -join ... on the first node and replace ID

[Install]
WantedBy=multi-user.target
